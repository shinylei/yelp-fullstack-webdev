<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit your recipe<%= recipe.name%></h1>

        <div style="width: 30%; margin: 25px auto">
            <form method="POST" action="/recipes/<%=recipe._id%>/?_method=PUT" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe[name]" value="<%= recipe.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="recipe[price]" value="<%= Number(recipe.price)%>" min="0.01" step="0.01">
                </div>
                <!--<div class="form-group">-->
                    <!--<input class="form-control" type="text" name="recipe[image]" value=" %= recipe.image%>">-->
                <!--</div>-->
                 <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe[description]" value="<%= recipe.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/recipes">Go Back</a>
        </div>
       
    </div>
    
</div>

<% include ../partials/footer%>